@page "/blends"
@inject BlendsService BlendsSvc
@inject AuthService Auth

<h3>Blends</h3>

@if (items == null)
{
    <p>Cargando...</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @foreach (var b in items)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <img src="@b.ImagenUrl" class="card-img-top" style="object-fit:cover; height:160px" />
                    <div class="card-body">
                        <h5 class="card-title">@b.Nombre</h5>
                        <p class="text-muted">@b.Tipo</p>
                        <p class="fw-bold">$@b.Precio.ToString("N2")</p>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (isAdmin)
    {
        <hr />
        <div class="alert alert-success">Modo administrador: podés editar blends desde tu panel.</div>
    }
}

@code {
    List<Templanza.Domain.Blend>? items;
    bool isAdmin;

    protected override async Task OnInitializedAsync()
    {
        isAdmin = await Auth.IsAdminAsync();
        items = await BlendsSvc.GetAllAsync() ?? [];
    }
}
